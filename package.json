{
  "scripts": {
    "test": "nodemon --exec 'npm run clean && npm run build && npm run lint && node dist/index.js' --watch src -e ts,ejs",
    "clean": "rm -rf dist",
    "pack": "rm -rf dist.webpack && webpack",
    "build": "tsc && cp -r views dist/views && cp -r public dist/public",
    "build:watch": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "tw": "npx tailwindcss -i style.tailwind.css -o ./public/css/style.min.css --watch --minify"
  },
  "dependencies": {
    "dotenv": "^16.4.4",
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "babel-loader": "^9.1.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
